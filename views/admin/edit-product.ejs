<%- include('../partials/admin-header') %>
    <section class="content-main">
        <div class="row">
            <div class="col-9">
                <div class="content-header">
                    <h2 class="content-title">Edit Product</h2>
                </div>
            </div>
            <form action="/admin/edit-product?id=<%= productDetails._id %> " method="POST" enctype="multipart/form-data">
                <div class="col-lg-12">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4>Basic</h4>
                        </div>
                        <div class="card-body">
                            <div class="mb-4">
                                <label for="product_name" class="form-label">Product title</label>
                                <input name="name" value="<%= productDetails.name %> " type="text"
                                    placeholder="Type here" class="form-control" id="product_name" />
                            </div>
                            <div class="mb-4">
                                <label class="form-label">Full description</label>
                                <textarea name="description" placeholder="Type here" class="form-control" rows="8">
                                    <%= productDetails.description %> 
                                </textarea>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="mb-4">
                                        <label class="form-label">Regular price</label>
                                        <div class="row gx-2">
                                            <input value="<%= productDetails.regularPrice %> " name="regularPrice"
                                                placeholder="$" type="text" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- card end// -->
                </div>
                <div class="col-lg-12">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4>Media</h4>
                        </div>
                        <div class="card-body">
                            <div class="input-upload">
                                <img src="/admin-assets/imgs/theme/upload.svg" alt="" />
                                <input required name="productImages" multiple class="form-control" type="file" />
                            </div>
                            <div class="edit-product-images mt-3">
                                <% productDetails.productImages.forEach(element=> { %>
                                <div class="col d-inline-block" style="position: relative;">
                                    <img src="/products-uploads/<%= element %> "
                                        class="img-md img-thumbnail" alt="Item" />
                                        <a onclick="deleteProductImage('<%=element %>','<%= productDetails._id  %>')" class="delete-product-img">X</a>
                                </div>
                                <% }) %>
                            </div>
                        </div>
                    </div>
                    <!-- card end// -->
                </div>
                <div class="card mb-4">
                    <div class="card-body">
                        <button type="submit" class="btn btn-md rounded font-sm hover-up">
                            Publish
                        </button>
                        <a href="/admin/products" class="btn btn-light rounded font-md ms-1">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </section>
    <!-- content-main end// -->

    <%- include('../partials/admin-footer') %>