<%- include('../../partials/user-header') %>
<main class="main">
  <div class="page-header breadcrumb-wrap">
    <div class="container">
      <div class="breadcrumb">
        <a href="/" rel="nofollow">Home</a>
        <span></span> Shop
        <span></span> Your Cart
      </div>
    </div>
  </div>
  <section class="mt-50 mb-50">
    <div class="container">
      <div class="row">
        <% if(products.length> 0){ %>
        <div class="col-12">
          <div class="table-responsive">
            <table class="table shopping-summery text-center">
              <thead>
                <tr class="main-heading">
                  <th scope="col" colspan="2">Product</th>
                  <th scope="col">Price</th>
                  <th scope="col">Stock Status</th>
                  <th scope="col">Action</th>
                  <th scope="col">Remove</th>
                </tr>
              </thead>
              <tbody>
                <% products.forEach(element=> { %>
                <tr id="<%= element.product._id %>-tr">
                  <td class="image product-thumbnail">
                    <a href="/product/<%= element.product.slug %>">
                      <img src="/products-uploads/<%= element.product.productImages[0] %>" alt="<%= element.product.name %>">
                    </a>
                  </td>
                  <td class="product-des product-name">
                    <h5 class="product-name"><a href="/product/<%= element.product.slug %>">
                        <%= element.product.name %>
                    </h5>
                  </td>
                  <td class="price" data-title="Price"><span>â‚¹<%= element.finalPrice %></span></td>
                  <td class="text-center" data-title="Stock">
                    <% if(element.product.Stock >0){ %>
                    <span class="color3 font-weight-bold">In Stock</span>
                    <% }else{ %>
                    <span class="color3 text-danger font-weight-bold">Out of stock</span>
                    <% } %>
                  </td>
                  <td class="text-right" data-title="Cart">
                    <% if(element.product.Stock >0){ %>
                    <button onclick="addtocartFromWishlist('<%= element._id %>','<%= element.product._id %>')" class="btn btn-sm"><i class="fi-rs-shopping-bag mr-5"></i>Add to cart</button>
                    <% }else{ %>
                    <button class="btn btn-secondary btn-sm"><i class="fi-rs-headset mr-5"></i>Contact us</button>
                    <% } %>
                  </td>
                  <td class="action" data-title="Remove">
                    <a class="" onclick="removeProductFromWishlist('<%= element.product._id %>')">
                      <i class="fi-rs-trash"></i>
                    </a>
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
          <div class="cart-action text-center mt-4">
            <!-- <a href="/checkout" class="btn me-2"><i class="fi-rs-shopping-bag mr-10"></i>Go to cart</a> -->
            <a href="/shop" class="btn btn-outline btn-lg btn-brand-outline font-weight-bold text-brand bg-white text-hover-white border-radius-5 btn-shadow-brand hover-up"><i class="fi-rs-shopping-bag mr-10"></i>Continue Shopping</a>
          </div>
        </div>
        <% } else { %>
        <div class="col-12 text-center my-5">
          <h3 class="">Your wishlist is empty!ðŸ¥²</h3>
          <p class="mb-4 mt-2">Add items to it now.</p>
          <a class="btn" href="/shop"><i class="fi-rs-shopping-bag mr-10"></i>Return to shop</a>
        </div>
        <% } %>
      </div>
    </div>
  </section>
</main>
<%- include('../../partials/user-footer') %>